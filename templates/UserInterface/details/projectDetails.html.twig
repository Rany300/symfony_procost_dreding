{% extends "layout.html.twig" %}


{% block content %}

<main class="app-content">
            <div class="app-title">
                <div>
                    <h1><i class="fa fa-laptop"></i>&nbsp;Informations sur {{ project.name }}</h1>
                </div>
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{path('dashboard')}}"><i class="fa fa-home fa-lg"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{path('projects')}}">Projets</a>
                    </li>
                    <li class="breadcrumb-item">Suivi de Prénom NOM</li>
                </ul>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="tile">
                        <table class="table table-striped table-bordered table-sm">
                            <tbody>
                                <tr>
                                    <th>Nom du projet</td>
                                    <td>{{ project.name }}</td>
                                </tr>
                                <tr>
                                    <th>Description</td>
                                    <td>{{ project.description }}</td>
                                </tr>
                                <tr>
                                    <th>Prix de vente</td>
                                    <td>{{ project.price }} €</td>
                                </tr>
                                <tr>
                                    <th>Coût de production</td>
                                    <td>{{ project.cost }} €</td>
                                </tr>
                                <tr>
                                    <th>Crée le</td>
                                    <td>{{ project.createdAt|date('d/m/Y') }}</td>
                                </tr>
                                <tr>
                                    <th>Livré le</td>
                                    <td>{{ project.deliveredAt ? project.deliveredAt|date('d/m/Y') : 'Non livré' }}</td>
                                </tr>
                            </tbody>
                        </table>
                        <a href="{{ path('editProject', {'id': project.id}) }}" class="btn btn-info">
                            <i class="fa fa-pencil"></i>Modifier
                        </a>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="tile pb-5">
                        <h3 class="tile-title">Historique des temps de production</h3>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>Employé</th>
                                        <th>Temps</th>
                                        <th>Date de saisie</th>
                                        <th>Coût total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for unit in work_units %}
                                        <tr>
                                            <td>{{ unit.employe.firstname }} {{ unit.employe.name }}</td>
                                            <td>{{ unit.duration }} jours</td>
                                            <td>{{ unit.startedAt|date('d/m/Y') }}</td>
                                            <td>{{ unit.employe.cost * unit.duration  }} €</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <hr/>
                        <nav class="float-right">
                        <ul class="pagination">
                    <li class="page-item {% if current_page == 1 %}disabled{% endif %}">
                        <a class="page-link" href="{{ path('projectDetails', {'id':project.id,'page': max(current_page - 1, 1)}) }}">&laquo;</a>
                    </li>
            
                    {% set start_page = max(current_page - 1, 1) %}
                    {% set end_page = min(start_page + 2, max_pages) %}
            
                    {% for page in start_page..end_page %}
                        <li class="page-item {% if current_page == page %}active{% endif %}">
                            <a class="page-link" href="{{ path('projectDetails',  {'id':project.id,'page': page}) }}">{{ page }}</a>
                        </li>
                    {% endfor %}
            
                    <li class="page-item {% if current_page == max_pages %}disabled{% endif %}">
                        <a class="page-link" href="{{ path('projectDetails', {'id':project.id,'page': min(current_page + 1, max_pages)}) }}">&raquo;</a>
                    </li>
                </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </main>

{% endblock %}