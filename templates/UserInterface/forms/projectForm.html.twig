                                <label class="control-label col-md-3">Description du projet</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'style': form.description.vars.errors|length > 0 ? 'border-color: red;' : ''}}) }}
