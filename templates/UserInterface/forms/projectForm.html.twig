                    <div class="row mt-4">
                        <div class="offset-md-4 col-md-8">
                            <div class="form-group row">
                                <label class="control-label col-md-3">Nom du projet</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'style': form.name.vars.errors|length > 0 ? 'border-color: red;' : ''}}) }}
