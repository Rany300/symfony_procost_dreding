{% extends "layout.html.twig" %}


{% block content %}
<main class="app-content">
            <div class="app-title">
                <div>
                    <h1><i class="fa fa-book"></i>&nbsp;Edition d'un métier</h1>
                </div>
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{path('dashboard')}}">
                    <i class="fa fa-home fa-lg"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{path('jobs')}}">
                    Métiers</a>
                    </li>
                    <li class="breadcrumb-item">Edition d'un métier</li>
                </ul>
            </div>
            <div class="tile">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-dismissible alert-success my-4">
                            <button class="close" type="button" data-dismiss="alert">×</button><strong>Well done!</strong> {{ message }}
                        </div>
                    {% endfor %}
                    
                    {{ form_start(form) }}
                    <section>
                    <h3>Informations générales</h3>
                    <div class="row mt-4">
                        <div class="offset-md-4 col-md-8">
                            <div class="form-group row">
                                <label class="control-label col-md-3">Nom du métier</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'style': form.name.vars.errors|length > 0 ? 'border-color: red;' : ''}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <div class="row">
                    <div class="offset-md-6 col-md-6">
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
                    </div>
                </div>
                {{ form_end(form) }}
                </form>
            </div>
        </main>
{% endblock %}