{% extends "layout.html.twig" %}

{% block content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1>
                    <i class="fa fa-laptop"></i>
                    &nbsp;Projets
                </h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('dashboard') }}">
                        <i class="fa fa-home fa-lg"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    Projets
                                    
                </ul>
            </div>
            <div class="tile pb-5">
                <a href="{{ path('addProject') }}" class="btn btn-primary float-right mb-4">
                    <i class="fa fa-plus-circle mr-2"></i>
                    Ajouter un projet
                </a>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Nom
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Prix de vente
                                </th>
                                <th>
                                    Coûts de production
                                </th>
                                <th>
                                    Crée le
                                </th>
                                <th>
                                    Fini le
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for project in projects %}
                                <tr>
                                    <td>
                                        {{ project.name }}
                                    </td>
                                    <td>
                                        {{ project.description }}
                                    </td>
                                    <td>
                                        {{ project.price }}
                                        €
                                    </td>
                                    <td>
                                        {{ project.cost }}
                                        €
                                    </td>
                                    <td>
                                        {{ project.createdAt|date('d/m/Y') }}
                                    </td>
                                    <td>
                                        {{ project.deliveredAt is not null ? project.deliveredAt|date('d/m/Y') : '-' }}
                                    </td>
                                    <td>
                                        <a href={{ path('projectDetails', {'id': project.id} )  }} class="btn btn-primary btn-sm">
                                            <i class="fa fa-eye mr-0"></i>
                                        </a>
                                        <a href={{ path('editProject', {'id': project.id } )  }} class="btn btn-info btn-sm">
                                            <i class="fa fa-pencil mr-0"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <hr/>
                <nav class="float-right">
                    {% include 'UserInterface/components/pagination.html.twig' %}

                </nav>
            </div>
        </main>
    {% endblock %}
    