{% extends "layout.html.twig" %}


{% block content %}
<main class="app-content">
            <div class="app-title">
                <div>
                    <h1><i class="fa fa-users"></i>&nbsp;Employés</h1>
                </div>
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('dashboard')}}">
                    <i class="fa fa-home fa-lg"></i></a>
                    </li>
                    <li class="breadcrumb-item">Employés</li>
                </ul>
            </div>
            <div class="tile pb-5">
                <a href="{{path('addEmployee')}}" class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un employé</a>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Métier</th>
                                <th>Coût journalier</th>
                                <th>Date d'embauche</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for employe in employes %}
                            <tr>
                                <td>{{ employe.name }} {{ employe.firstName }}</td>
                                <td>{{ employe.email }}</td>
                                <td>{{ employe.job.name }}</td>
                                <td>{{ employe.cost }} €</td>
                                <td>{{ employe.hiredAt|date('M Y') }}</td>
                                <td>
                                    <a href={{ path('employeeDetails',{'id': employe.id}) }} class="btn btn-primary btn-sm">
                                        <i class="fa fa-eye mr-0"></i>
                                    </a>
                                    <a href={{ path('editEmployee', {'id': employe.id}) }} class="btn btn-info btn-sm">
                                        <i class="fa fa-pencil mr-0"></i>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}

                        </tbody>
                    </table>
                </div>
                <hr/>
                <nav class="float-right">
                <ul class="pagination">
                    <li class="page-item {% if current_page == 1 %}disabled{% endif %}">
                        <a class="page-link" href="{{ path('employees', {'page': max(current_page - 1, 1)}) }}">&laquo;</a>
                    </li>
            
                    {% set start_page = max(current_page - 1, 1) %}
                    {% set end_page = min(start_page + 2, max_pages) %}
            
                    {% for page in start_page..end_page %}
                        <li class="page-item {% if current_page == page %}active{% endif %}">
                            <a class="page-link" href="{{ path('employees', {'page': page}) }}">{{ page }}</a>
                        </li>
                    {% endfor %}
            
                    <li class="page-item {% if current_page == max_pages %}disabled{% endif %}">
                        <a class="page-link" href="{{ path('employees', {'page': min(current_page + 1, max_pages)}) }}">&raquo;</a>
                    </li>
                </ul>
            

                </nav>
            </div>
        </main>
{% endblock %}